<div class="row">
  <div class="span4"></div>
  <div class="span4">

    <%= form_for(resource, :html => {class: "form-signin"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Please sign up</h2>

    <%= f.email_field :email, :autofocus => true, placeholder:"Email Address", class: "input-block-level"%>


    <%= f.password_field :password, placeholder:"Password", class: "input-block-level" %>


    <%= f.password_field :password_confirmation, placeholder: "Password confirmation",class: "input-block-level" %>

    <div><%= f.submit "Sign up",class:"btn btn-large btn-primary" %></div>


    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>