<div class="span4">

    <%= form_for(resource, :html => {class: "form-signin"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Please sign up</h2>

    <%= f.text_field :name, :autofocus => true, placeholder:"Name", class: "input-block-level"%>

    <%= f.email_field :email, placeholder:"Email Address", class: "input-block-level"%>

    <%= f.text_field :phone_number, placeholder: "phone number", class: "input-block-level" %>

    
  
    <%= f.password_field :password, placeholder:"Password", class: "input-block-level" %>


    <%= f.password_field :password_confirmation, placeholder: "Password confirmation",class: "input-block-level" %>

    <%= f.label :receives_notification, class: "checkbox" do  %>
      <%= f.check_box :receives_notification %>
      I want to receive text message notifcations.
    <% end %>

    <div><%= f.submit "Sign up",class:"btn btn-large btn-primary" %></div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="logo">
  <div class="span4 offset1">
    <h1> Lets Not Forget </h1>
    <img src= "../postit2.jpg" height="205" width="225" >

  </div>
</div>
