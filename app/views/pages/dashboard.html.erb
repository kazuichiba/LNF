  <div class="row-fluid">
    <div class="span4">
      <h3>Tasks
      </h3>
    </div>
    <div class="span4">
     <%= render "tasks/form" %>
    </div>
    <div class="span4">
      <h3>
      </h3>
    </div>
  </div>
  <div class="sticky-notes">
    <ul>    
      <% @tasks.each do |task| %>
      <li class="task-front" id="task_id_<%= task.id %>">
       <%= link_to(task, class: "task-sticky  #{'completed' if task.completed }") do %>
        <h2><%= task.title %></h2>
        <p><%= task.content %></p>
        <% link_to "Delete This Task", dashboard_path(task), method: :delete, :class => "btn btn-danger" %>
        <div class="edit-task">
          <a class="sticky-form"><%= render "tasks/update_form", task: task %></a>
        </div>
      <% end -%>
      </li>
      <% end %>
     
    </ul>
  </div>