
<%= simple_form_for task do |f| %>
  <%= f.input :title, as: :text %>
  <%= f.input :content, as: :text, input_html: {rows: 9} %>
  <%= f.input :label %>
  <%= f.input :priority %>
  <%= f.input :status %>
  <%= f.association :user, label: 'Assigned To' %>
  <%= f.input :completed, input_html: {class: "inline checkbox"} %>
  <%= f.submit "Update Task", class: 'update-task' %>
<% end %>
